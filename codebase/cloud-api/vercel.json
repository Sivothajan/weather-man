{
    "version": 2,
    "builds": [
        { 
            "src": "api/router.js",  
            "use": "@vercel/node" 
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "/api/router.js",
            "methods": ["GET", "POST", "OPTIONS"],
            "headers": {
                "Content-Type": "application/json",
                "Access-Control-Allow-Origin": "*",
                "Access-Control-Allow-Headers": "Authorization, Content-Type"
            }
        }
    ]
}
